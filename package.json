{
  "name": "vite-react-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
  "typecheck": "tsc --noEmit -p tsconfig.app.json",
  "prebuild:server": "node -e \"const fs=require('fs'); if(!fs.existsSync('./node_modules/typescript')){console.error('Missing local TypeScript. Run npm ci to install dependencies.'); process.exit(1);}\"",
  "build:server": "npx tsc -p tsconfig.server.json",
    "server": "npm run build:server && node dist/index.js",
    "server:dev": "cross-env TS_NODE_PROJECT=tsconfig.server.json nodemon --exec node --loader ts-node/esm server/index.ts"
  },
  "dependencies": {
    
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/nodemailer": "^7.0.2",
    "@types/pg": "^8.15.5",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "lucide-react": "^0.344.0",
    "nodemailer": "^7.0.9",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
  "nodemon": "^3.1.10",
  "cross-env": "^7.0.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
